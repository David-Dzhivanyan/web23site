@font-face {
    font-family: "{{ name }}";
    font-weight: normal;
    font-style: normal;
    font-display: block;
    src: {{{ fontSrc }}};
}

.{{ prefix }}:before {
    font-family: {{ name }} !important;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

{{# each codepoints }}
.{{ ../prefix }}_icon_{{ @key }}:before {
    content: "\\{{ codepoint this }}";
}
{{/ each }}
